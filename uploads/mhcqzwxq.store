                        <div class="cart-item-quantity">
                            <button class="quantity-btn decrease-quantity" data-id="${item.id}">-</button>
                            <span>${item.quantity}</span>
                            <button class="quantity-btn increase-quantity" data-id="${item.id}">+</button>
                        </div>
                    </div>
                    <div class="cart-item-total">$${itemTotal.toFixed(2)}</div>
                    <div class="remove-item" data-id="${item.id}">
                        <i class="fas fa-trash"></i>
                    </div>
                `;
                cartItems.appendChild(cartItem);
            });
            
            cartTotal.textContent = total.toFixed(2);
        }

        // Checkout function
        function checkout() {
            if (cart.length === 0) {
                showNotification('INVENTORY EMPTY!', 'error');
                return;
            }
            
            if (!currentUser) {
                showNotification('SYSTEM ACCESS REQUIRED FOR TRANSACTION', 'error');
                loginModal.style.display = 'flex';
                return;
            }
            
            // Calculate total and show payment modal
            const totalAmount = calculateCartTotal();
            moneyText.textContent = `$${totalAmount.toFixed(2)}`;
            
            // Reset files queue and preview
            filesQueue = [];
            renderPreview();
            
            // Show payment modal
            cartModal.style.display = 'none';
            paymentModal.style.display = 'flex';
        }

        // Upload helpers
        const isImage = (file)=> /^image\//.test(file.type);
        function addFiles(list){
            for(const f of list){
                if(!isImage(f) && f.type!=='application/pdf') continue;
                filesQueue.push(f);
            }
            renderPreview();
        }
        
        function renderPreview(){
            preview.innerHTML='';
            filesQueue.forEach((f,idx)=>{
                if(isImage(f)){
                    const url = URL.createObjectURL(f);
                    const box = document.createElement('div');
                    box.className='thumb';
                    box.innerHTML = `<img src="${url}" alt="">
                                     <button class="remove" data-i="${idx}"><i class="fa-solid fa-xmark"></i></button>`;
                    preview.appendChild(box);
                }else{
                    const box = document.createElement('div');
                    box.className='thumb';
                    box.style.display='grid';
                    box.style.placeItems='center';
                    box.innerHTML = `<div style="padding:12px;text-align:center">
                        <i class="fa-regular fa-file-pdf" style="font-size:28px"></i>
                        <div style="font-size:.85rem">${f.name}</div>
                        <button class="remove" data-i="${idx}"><i class="fa-solid fa-xmark"></i></button>
                    </div>`;
                    preview.appendChild(box);
                }
            });
        }

        // Send receipt to Telegram - UPDATED VERSION (រូបនៅខាងលើ អក្សរនៅខាងក្រោម)
        async function sendReceiptToTelegram(totalAmount, files) {
            // Create order summary
            let orderSummary = "🛒 <b>NEW ORDER WITH RECEIPT</b>\n\n";
            orderSummary += `👤 <b>Customer:</b> ${currentUser.username}\n`;
            orderSummary += `📞 <b>Phone:</b> ${currentUser.phone}\n`;
            orderSummary += `💰 <b>Total Amount:</b> $${totalAmount.toFixed(2)}\n`;
            orderSummary += `💱 <b>Currency:</b> ${document.querySelector('input[name="currency"]:checked').value}\n\n`;
            
            // Add cart items
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                orderSummary += `📦 <b>${item.name}</b>\n`;
                orderSummary += `   Price: $${item.price.toFixed(2)} x ${item.quantity} = $${itemTotal.toFixed(2)}\n\n`;
            });
            
            orderSummary += "📸 <b>Receipt attached above</b>\n\n";
            orderSummary += "🙏 Thank you for your order!";

            try {
                // Send receipt images to Telegram with caption on FIRST image
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    if (isImage(file)) {
                        const formData = new FormData();
                        formData.append('chat_id', CHAT_ID);
                        formData.append('photo', file);
                        
                        // Add caption ONLY to the first image
                        if (i === 0) {
                            formData.append('caption', orderSummary);
                            formData.append('parse_mode', 'HTML');
                        }
                        
                        await sendPhotoToTelegram(formData);
                    } else if (file.type === 'application/pdf') {
                        // For PDF files, send as document
                        const formData = new FormData();
                        formData.append('chat_id', CHAT_ID);
                        formData.append('document', file);
                        
                        // Add caption ONLY to the first document
                        if (i === 0) {
                            formData.append('caption', orderSummary);
                        }
                        
                        await sendDocumentToTelegram(formData);
                    }
                    // Add a small delay between sending files to avoid rate limiting
                    await new Promise(resolve => setTimeout(resolve, 1000));
                }
                
                // If no files were sent, send the order summary as a separate message
                if (files.length === 0) {
                    await sendToTelegram(orderSummary);
                }
                
                return true;
            } catch (error) {
                console.error('Error sending to Telegram:', error);
                return false;
            }
        }

        // Send document to Telegram
        async function sendDocumentToTelegram(formData) {
            const url = `https://api.telegram.org/bot${BOT_TOKEN}/sendDocument`;
            
            try {
                const response = await fetch(url, {
                    method: "POST",
                    body: formData
                });
                
                if (!response.ok) {
                    throw new Error('Failed to send document to Telegram');
                }
                
                return true;
            } catch (error) {
                console.error('Error sending document to Telegram:', error);
                return false;
            }
        }

        // Show notification
        function showNotification(message, type = 'success') {
            // Create notification element
            const notification = document.createElement('div');
            const backgroundColor = type === 'error' ? '#ef4444' : 'var(--primary-color)';
            
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background-color: ${backgroundColor};
                color: var(--bg-color);
                padding: 15px 20px;
                border-radius: var(--border-radius);
                box-shadow: var(--shadow);
                z-index: 1000;
                transform: translateX(100%);
                transition: transform 0.3s ease;
                max-width: 300px;
                font-weight: bold;
            `;
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 10px;">
                    <i class="fas ${type === 'error' ? 'fa-exclamation-circle' : 'fa-check-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            // Animate out and remove
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }

        // Show toast
        function showToast(msg){
            toast.textContent = msg;
            toast.classList.add('show');
            setTimeout(()=> toast.classList.remove('show'), 2200);
        }

        // Save cart to localStorage
        function saveCartToStorage() {
            localStorage.setItem('naratStoreCart', JSON.stringify(cart));
        }

        // Load cart from localStorage
        function loadCartFromStorage() {
            const savedCart = localStorage.getItem('naratStoreCart');
            if (savedCart) {
                cart = JSON.parse(savedCart);
                updateCartCount();
            }
        }

        // Send message to Telegram
        async function sendToTelegram(message) {
            const url = `https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`;
            
            try {
                const response = await fetch(url, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ 
                        chat_id: CHAT_ID, 
                        text: message,
                        parse_mode: "HTML"
                    })
                });
                
                if (!response.ok) {
                    throw new Error('Failed to send message to Telegram');
                }
                
                return true;
            } catch (error) {
                console.error('Error sending to Telegram:', error);
                return false;
            }
        }

        // Send photo to Telegram
        async function sendPhotoToTelegram(formData) {
            const url = `https://api.telegram.org/bot${BOT_TOKEN}/sendPhoto`;
            
            try {
                const response = await fetch(url, {
                    method: "POST",
                    body: formData
                });
                
                if (!response.ok) {
                    throw new Error('Failed to send photo to Telegram');
                }
                
                return true;
            } catch (error) {
                console.error('Error sending photo to Telegram:', error);
                return false;
            }
        }

        // Initialize the application
        init();
    </script>
</body>
</html>